/* history-detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.video-info {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.video-cover {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  object-fit: cover;
}

.video-details {
  display: flex;
  flex-direction: column;
}

.video-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.video-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.time {
  font-size: 24rpx;
  color: #888;
}

.tags {
  display: flex;
  gap: 8rpx;
}

.tag {
  font-size: 20rpx;
  padding: 2rpx 12rpx;
  border-radius: 50rpx;
  color: #fff;
}

.tag.style {
  background-color: #ff2c55;
}

.tag.length {
  background-color: #2f80ed;
}

.content-section, .options-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.content-box {
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.content-box.original {
  background: #f5f5f5;
  color: #666;
}

.content-box.rewritten {
  background: #e8f4ff;
  color: #333;
}

/* 选项相关样式 */
.option-group {
  margin-bottom: 20rpx;
}

.option-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.option-items {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.option-item {
  padding: 10rpx 24rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  background: #f5f5f5;
  color: #666;
  border: 2rpx solid transparent;
}

.option-item.selected {
  background: #ffe8ec;
  color: #ff2c55;
  border-color: #ff2c55;
  font-weight: 500;
}

.button-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 40rpx;
  padding: 0 20rpx;
  justify-content: center;
}

.primary-btn {
  flex: 1;
  min-width: 180rpx;
  background: #ff2c55;
  color: #fff;
  border: 2rpx solid #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(255, 44, 85, 0.3);
  transition: all 0.2s ease;
}

.primary-btn:active {
  transform: scale(0.96);
  background-color: #e62548;
}

.secondary-btn {
  flex: 1;
  min-width: 180rpx;
  background: #fff;
  color: #333;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.secondary-btn:active {
  transform: scale(0.96);
  background-color: #f5f5f5;
}

.error-message {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: #999;
  font-size: 28rpx;
}

.placeholder {
  color: #999;
  font-style: italic;
} 