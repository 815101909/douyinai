/**history.wxss**/
page {
  height: 100vh;
  background-color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  box-sizing: border-box;
  position: relative;
}

/* 页面容器 */
.page-container {
  height: 100vh;
  width: 100%;
  box-sizing: border-box;
  padding-top: 0; /* 确保顶部没有额外填充 */
}

/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
  padding-top: 0; /* 移除顶部填充 */
  padding-bottom: 220rpx; /* 增加底部填充高度 */
}

/* 头部样式 */
.header {
  padding: 5rpx 32rpx; /* 减少顶部内边距 */
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
  margin-top: 0; /* 确保没有顶部外边距 */
}

.header-title {
  font-size: 32rpx; /* 减小字体尺寸 */
  font-weight: bold;
  color: #333;
  margin: 0; /* 确保没有外边距 */
  padding: 5rpx 0; /* 添加少量上下内边距 */
}

/* 历史记录列表容器 */
.history-list-container {
  padding: 16rpx 32rpx 100rpx 32rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 历史记录项 */
.history-item {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 28rpx;
  border: 1rpx solid #e0e0e0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

/* 历史记录内容 */
.history-content {
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
}

/* 视频封面样式 */
.history-media {
  width: 180rpx;
  height: 320rpx; /* 9:16的比例 */
  margin-right: 24rpx;
  flex-shrink: 0;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.history-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 12rpx;
}

/* 封面上的统计信息 */
.cover-stats {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 12rpx 8rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
  color: #fff;
  margin-bottom: 4rpx;
}

.stat-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

.stat-text {
  font-size: 20rpx;
  color: #fff;
}

/* 历史记录文本内容 */
.history-text {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.history-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.history-time {
  font-size: 22rpx;
  color: #888;
  white-space: nowrap;
}

.history-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 历史记录页信息底部样式 */
.history-footer {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 16rpx;
}

.stats {
  display: flex;
  align-items: center;
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  margin-top: 16rpx;
  justify-content: flex-end;
  gap: 16rpx;
  flex-wrap: wrap; /* 允许在空间不足时换行 */
}

.copy-btn, .view-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 16rpx;
  height: 52rpx;
  font-size: 22rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
  line-height: 1;
  min-width: 100rpx;
  flex: 0 1 auto; /* 允许按钮自适应宽度 */
  margin-bottom: 8rpx; /* 在按钮换行时提供间距 */
}

.copy-btn {
  color: #ff2c55;
  border: 1rpx solid #ff2c55;
  background-color: #fff;
}

.view-btn {
  color: #fff;
  background-color: #ff2c55;
}

.btn-icon-small {
  width: 22rpx;
  height: 22rpx;
  margin-right: 6rpx;
}

/* 底部空间，防止内容被底部导航栏遮挡 */
.bottom-space {
  height: 200rpx; /* 增大底部空间高度 */
  width: 100%;
}

/* 底部导航栏 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
  z-index: 100;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #888;
}

.tab-item.active {
  color: #ff2c55;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

.tab-text {
  font-size: 24rpx;
  margin-top: 4rpx;
} 